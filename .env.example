# Reddit API Configuration
REDDIT_CLIENT_ID=your_reddit_app_client_id
REDDIT_CLIENT_SECRET=your_reddit_app_client_secret
REDDIT_USER_AGENT=RedditCommentStories/1.0 by YourUsername

# AI API Configuration (choose one)
# Option 1: OpenAI
OPENAI_API_KEY=your_openai_api_key

# Option 2: Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key

# Option 3: AWS Bedrock (uses AWS credentials)
AWS_PROFILE=personal
AWS_DEFAULT_REGION=us-east-1

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO
CACHE_TTL=3600  # Cache time-to-live in seconds

# Rate Limiting
REDDIT_RATE_LIMIT=60  # Requests per minute
AI_RATE_LIMIT=10  # Requests per minute

# Story Generation Settings
DEFAULT_SUBREDDIT=AskReddit
DEFAULT_POST_LIMIT=10
DEFAULT_COMMENT_LIMIT=5
MIN_COMMENT_SCORE=10
STORY_MIN_WORDS=300
STORY_MAX_WORDS=500